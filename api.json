definitions:
  Department:
    type: object
    properties:
      id:
        title: Id
        type: string
        format: uuid
        readOnly: true
      name:
        title: Name
        type: string
        maxLength: 100
      description:
        title: Description
        type: string
        maxLength: 255
        x-nullable: true
      department_members:
        type: array
        items:
          type: string
          format: uuid
        uniqueItems: true
  Notification:
    required:
    - title
    - message
    - user
    - notification_type
    - state
    type: object
    properties:
      id:
        title: Id
        type: string
        format: uuid
        readOnly: true
      title:
        title: Title
        type: string
        maxLength: 255
        minLength: 1
      message:
        title: Message
        type: string
        minLength: 1
      user:
        title: User
        type: string
        format: uuid
      notification_type:
        title: Notification type
        type: string
        format: uuid
      is_read:
        title: Is read
        type: boolean
      state:
        title: State
        type: string
        format: uuid
      created_at:
        title: Created at
        type: string
        format: date-time
        readOnly: true
  Task:
    required:
    - title
    - task_identity
    - state
    type: object
    properties:
      id:
        title: Id
        type: string
        format: uuid
        readOnly: true
      title:
        title: Title
        type: string
        maxLength: 100
        minLength: 1
      description:
        title: Description
        type: string
        maxLength: 255
        x-nullable: true
      priority:
        title: Priority
        type: string
        enum:
        - low
        - medium
        - high
      task_identity:
        title: Task identity
        type: string
        format: uuid
      state:
        title: State
        type: string
        format: uuid
      start_date:
        title: Start date
        type: string
        format: date-time
        x-nullable: true
      due_date:
        title: Due date
        type: string
        format: date-time
        x-nullable: true
      assigned_to:
        title: Assigned to
        type: string
        format: uuid
        x-nullable: true
      created_by:
        title: Created by
        type: string
        format: uuid
        x-nullable: true
      updated_by:
        title: Updated by
        type: string
        format: uuid
        x-nullable: true
      created_at:
        title: Created at
        type: string
        format: date-time
        readOnly: true
        x-nullable: true
      updated_at:
        title: Updated at
        type: string
        format: date-time
        readOnly: true
        x-nullable: true
